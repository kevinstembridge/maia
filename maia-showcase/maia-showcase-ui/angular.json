{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "cli": {
        "packageManager": "npm"
    },
    "newProjectRoot": "projects",
    "projects": {
        "maia-showcase-ui": {
            "projectType": "application",
            "schematics": {},
            "root": "",
            "sourceRoot": "src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular/build:application",
                    "options": {
                        "outputPath": {
                            "base": "../app/src/main/resources/static"
                        },
                        "preserveSymlinks": true,
                        "browser": "src/main.ts",
                        "tsConfig": "tsconfig.app.json",
                        "assets": [
                            {
                                "glob": "**/*",
                                "input": "public"
                            }
                        ],
                        "styles": [
                            "src/material-theme.scss",
                            "src/styles.css"
                        ]
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "500kB",
                                    "maximumError": "1MB"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "4kB",
                                    "maximumError": "8kB"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "optimization": false,
                            "extractLicenses": false,
                            "sourceMap": {
                                "scripts": true,
                                "styles": true,
                                "vendor": true
                            }
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular/build:dev-server",
                    "configurations": {
                        "production": {
                            "buildTarget": "maia-showcase-ui:build:production"
                        },
                        "development": {
                            "buildTarget": "maia-showcase-ui:build:development"
                        }
                    },
                    "defaultConfiguration": "development",
                    "options": {
                        "prebundle": {
                            "exclude": ["@maia/maia-ui"]
                        }
                    }
                },
                "test": {
                    "builder": "@angular/build:unit-test"
                }
            }
        }
    }
}
